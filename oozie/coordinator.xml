<coordinator-app name="Next-Gen-ETL-Framework"
                 frequency="${coord:days(1)}" start="${startTime}" end="${endTime}" timezone="${timezone}"
                 xmlns="uri:oozie:coordinator:0.1">

    <controls>
        <timeout>-1</timeout>
    </controls>

    <datasets>
        <dataset name="NextGenETLDrop" frequency="${coord:days(1)}" initial-instance="${initialTime}"
                 timezone="${timezone}">
            <uri-template>${NextGenETLDrop}/_SUCCESS</uri-template>
            <done-flag></done-flag>
        </dataset>
    </datasets>

    <input-events>
        <data-in name="inputPath" dataset="NextGenETLDrop">
            <instance>${coord:current(0)}</instance>
        </data-in>
    </input-events>
    <action>
        <workflow>
            <app-path>${workflowRoot}/workflow.xml</app-path>
            <configuration>
                <property>
                    <name>input</name>
                    <value>
                        ${NextGenETLDrop}${coord:formatTime(coord:nominalTime(), '/yyyy-MM-dd')}
                    </value>
                </property>
                <property>
                    <name>nominalDate</name>
                    <value>${coord:nominalTime()}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>